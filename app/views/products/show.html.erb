<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
<br>
    <div>
      <%= form_for [@product, @review] do |form| %>

        <div class="form-group">
          <%= form.label :Rating %>
          <%= form.select :rating, [[1],[2],[3],[4],[5]]%>
        </div>

        <div class="form-group">
          <%= form.label :Review %>
          <%= form.text_field :description, class: 'form-control' %>
        </div>

        <%= form.submit 'Add Review', class: 'btn btn-primary' %>
      <% end %>
    </div>

<br>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>User</th>
          <th>Rating</th>
          <th>Review</th>
        </tr>
      </thead>
      <tbody>
        <% @product.reviews.reverse_each do |item| %>
         <tr>
          <td>
            <%= User.find(item.user_id).first_name %> <%= User.find(item.user_id).last_name %>
          </td>
          <td>
            <h4><%= item.rating.times do '⭐' end %></h4>
          </td>
          <td>
            <%= item.description %>
          </td>
        </tr>

        <% end %>
      </tbody>
    </table>
  </div>

  </article>

</section>
